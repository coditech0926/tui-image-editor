/* GRID VISUAL OF FLIP AND ROTATE MENU  */
.{prefix}-container
    .{prefix}-grid-visual
        display: none;
        position: absolute;
        width: 100%;
        height: 100%;
    .{prefix}-main.flip,
    .{prefix}-main.rotate
        .tui-image-editor
            transition: none;
    .{prefix}-main.flip .{prefix}-grid-visual,
    .{prefix}-main.rotate .{prefix}-grid-visual
        display: block;
    .{prefix}-grid-visual 
        table
            width: 100%;
            height: 100%;
            border-collapse: collapse;
            box-shadow: 0 0 1px 0 rgba(0,0,0,0.3);
            td
                border: 1px solid #fff;
                box-shadow: 0 0 1px 0 rgba(0,0,0,0.3);
            td.dot:before
                content: '';
                position: absolute;
                width: 8px;
                height: 8px;
                border: 1px solid #cdcdcd;
                border-radius: 100%;
                background-color: #fff;
            td.dot.left-top:before
                top: -4px;
                left: -4px;
            td.dot.right-top:before
                top: -4px;
                right: -4px;
            td.dot.left-bottom:before
                bottom: -4px;
                left: -4px;
            td.dot.right-bottom:before
                bottom: -4px;
                right: -4px;